.workspace-overview-tab-content
  div.che-label-container
    border-bottom none
    padding 10px 0

  .che-input-box .che-input-area
    max-width 450px

  .che-label-container .che-label-container-label-name
    color $label-secondary-color
    font-weight 700 !important
    margin-top 8px

  .timeout-info-value
    margin-right 15px

  .workspace-overview-description
    color $disabled-color

  che-button-primary-flat
    button
      background-color $label-secondary-color
      border-color $label-secondary-color
      box-shadow none !important
      span
        color $white-color
      &:hover
        background-color $label-secondary-color !important
        che-brightness(80%)

  button
    padding-left 15px
    padding-right 15px
    min-width inherit
    margin 0 30px 0 0

  .workspace-status-indicator .fa-circle
    font-size 19px

  che-filter-selector
    line-height 33px

  .namespace-toggle-button button
    margin 0 10px 10px 0

  .namespace-link
    line-height 30px
    span
      float left
      line-height inherit
    div
      cursor pointer
      font-size 30px
      margin-left 10px
      line-height inherit
      outline none !important
      color $label-secondary-color

  .namespace-additional-info
    color $label-secondary-color
    margin-left 10px

  .empty-namespace-label
    color $warning-color
    margin-bottom 10px
    i
      margin-right 10px
      font-size 16pt

  span.workspace-status-text
    color lighten($che-ide-background-color, 40%) !important
    margin-bottom 4px
    margin-left 10px

  .workspace-restart-message
    color $disabled-color
    margin-top 15px

  .workspace-overview-delete-label label
    color $che-delete-label-color

  .che-label-container-content .workspace-overview-action-buttons
    margin-top 20px
